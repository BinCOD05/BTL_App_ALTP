<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game"
    android:fitsSystemWindows="true"
    tools:context=".DisplayGame">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAns4"
        android:layout_width="178dp"
        android:layout_height="87dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/bottom_ct"
        android:text="Đáp án D"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAns3"
        android:layout_width="178dp"
        android:layout_height="87dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/bottom_ct"
        android:text="Đáp án C"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAns1"
        android:layout_width="178dp"
        android:layout_height="87dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/bottom_ct"
        android:text="Đáp án A"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAns2"
        android:layout_width="178dp"
        android:layout_height="87dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/bottom_ct"
        android:text="Đáp án B"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="347dp"
        android:layout_height="181dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/question_layout"
        android:gravity="center"

        android:padding="5dp"
        android:text="Câu hỏi hiển thị ở đây"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQuesNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:text="Câu 1"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/txtQuestion"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btnMenu"
        android:layout_width="79dp"
        android:layout_height="57dp"
        android:layout_marginTop="4dp"
        android:contentDescription="menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />


    <TextView
        android:id="@+id/txtCurrentMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="500.000đ"
        android:textColor="#FFD700"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQuestion"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
